<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="es.upm.miw.listadocervezas">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/miw_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/miw_launcher_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DetalleItem"
            android:label="@string/title_activity_detalle_item"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.upm.miw.listadocervezas.MainActivity" />
        </activity>
    </application>

</manifest>